{% extends 'layout.html.twig' %}

{% block links %}
    <link href="/assets/css/style.css" rel="stylesheet" />
    <link href="/assets/css/infos-forms.css" rel="stylesheet" />
{% endblock %}

{% block scripts %}
    <script rel="script" src="/assets/script/functionLibrary.js" defer></script>
    <script rel="script" src="/assets/script/siretAutocomplete2.js" defer></script>
{% endblock %}

{% block subtitle %}
    Mes Informations
{% endblock %}

{% block content %}
    {% include 'Component/_header.html.twig' %}

    <main>
    {% if errors is not empty %}
        {% for error in errors %}
            {{ error }}
        {% endfor %}
    {% endif %}
        <h1>Mes <b>informations</b></h1>
        <p>Renseignez vos informations professionnelles ici afin de gagner du temps, </br>
        elles seront automatiquement importées lors de la création de vos factures !</p>
        <form action="" method="post">
            <fieldset class="infos-field">
                <input type="text" name="siret"     id="siret"     placeholder="Numéro de Siret" maxlength="14"  pattern="[0-9]{14}"      title="Le numéro de Siret doit comporter 14 chiffres" value="{{infos.siret}}" required>
                <input type="text" name="firstname" id="firstname" placeholder="Prénom"          maxlength="255" title="Le prénom complet ne doit contenir que des lettres, des espaces et des tirets" value="{{ infos.firstname|upper }}" required>
                <input type="text" name="lastname"  id="lastname"  placeholder="Nom"             maxlength="255" title="Le nom complet ne doit contenir que des lettres, des espaces et des tirets"    value="{{ infos.lastname|upper }}" required>
                <input type="text" name="address"   id="address"   placeholder="Adresse postale" maxlength="255" title="Le nom complet ne doit contenir que des lettres, des espaces et des tirets"    value="{{infos.address}}" required>
                <input type="text" name="bank_details" id="bank_details" placeholder="Saisissez votre IBAN" maxlength="34" pattern="[A-Z]{2}[0-9]{2}[A-Z0-9]{11,30}" title="Veuillez entrer un IBAN valide" value="{{infos.bank_details}}" required>
            </fieldset>

            <div class="form-cta">
                <button type="submit">Valider</button>
                <button type="reset" onclick="confirmCancel('/dashboard')">Annuler</button>
            </div>

            <div class="form-cta">
                <button type="button" onclick="confirmDeleteAccount('/delete')">Supprimer mon compte</button>
            </div>
        </form>
    </main>
{% endblock %}
